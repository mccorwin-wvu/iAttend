<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.WVU.iAttend.RegisterActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="Create-A-Class"
        android:id="@+id/createAClassText"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorLink="@android:color/holo_blue_bright"
        android:textColor="@android:color/holo_orange_dark"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:textAllCaps="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/createAClassText"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:textSize="25dp"
                android:id="@+id/ClassName"
                android:hint="Class Name:"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorHint="@color/colorAccent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:id="@+id/StartTimeText"
                android:text="Start Time"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorHint="@color/colorAccent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"/>

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:headerBackground="@color/colorAccent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/StarttimePicker" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:id="@+id/endTImeText"
                android:text="End Time"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorHint="@color/colorAccent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/regLastName"
                android:layout_alignParentStart="true" />

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:headerBackground="@color/colorAccent"
                android:id="@+id/endtimePicker" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:id="@+id/DaysOfTheWeekText"
                android:text="Days Of the Week"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorHint="@color/colorAccent"
                android:layout_below="@+id/regEmail"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:weightSum="7"
                android:orientation="horizontal"
                android:id="@+id/radioGroup"
               >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Mon"
                    android:textColor="@android:color/holo_orange_dark"
                    android:id="@+id/radioButtonMon"
                    android:checked="false"
                    android:textSize="6dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Tues"
                    android:textColor="@android:color/holo_orange_dark"
                    android:id="@+id/radioButtonTues"
                    android:checked="false"
                    android:textSize="6dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Wed"
                    android:textColor="@android:color/holo_orange_dark"
                    android:id="@+id/radioButtonWed"
                    android:checked="false"
                    android:textSize="6dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Thurs"
                    android:textColor="@android:color/holo_orange_dark"
                    android:id="@+id/radioButtonThurs"
                    android:checked="false"
                    android:textSize="6dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Fri"
                    android:textColor="@android:color/holo_orange_dark"
                    android:id="@+id/radioButtonFri"
                    android:checked="false"
                    android:textSize="6dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Sat"
                    android:textColor="@android:color/holo_orange_dark"
                    android:id="@+id/radioButtonSat"
                    android:checked="false"
                    android:textSize="6dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="Sun"
                    android:textColor="@android:color/holo_orange_dark"
                    android:id="@+id/radioButtonSun"
                    android:checked="false"
                    android:textSize="6dp" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:id="@+id/StartDayText"
                android:text="Start Day"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorHint="@color/colorAccent"
                android:layout_below="@+id/regEmail"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:layout_marginBottom="20dp"
                android:scaleY="1"
                android:id="@+id/StartDayPicker" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:id="@+id/EndDayText"
                android:text="End Day"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorHint="@color/colorAccent"
                android:layout_below="@+id/regEmail"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:layout_marginBottom="20dp"
                android:scaleY="1"
                android:id="@+id/EndDatePicker" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="25dp"
                    android:id="@+id/JoinCodeText"
                    android:text="Join Code: "
                    android:textColor="@android:color/holo_orange_dark"
                    android:textColorHint="@color/colorAccent"
                    android:layout_below="@+id/regEmail"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="20dp"
                    android:id="@+id/JoinCode"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textColorHint="@color/colorAccent"
                    android:layout_below="@+id/regEmail"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp" />









            </LinearLayout>
            <Button
                android:text="Set Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:id="@+id/LocationButton"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/regPasswordCon"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <Switch
                android:text="Location Verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:id="@+id/LocationSwitch"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2" />

            <Switch
                android:text="Code Verification"
                android:layout_width="match_parent"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/CodeSwitch" />

            <Button
                android:text="Create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:id="@+id/createButton"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/regPasswordCon"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
